@model MFCommunity.Models.Album
@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> _signInManager
@inject UserManager<User> _userManager

@{
    ViewData["Title"] = @Model.AlbumTitle;
}

<h1>Details</h1>

<div>
    <h4>Album</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Artist)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Artist.ArtistName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AlbumTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AlbumTitle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AlbumNumberOfSongs)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AlbumNumberOfSongs)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AlbumReleaseDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AlbumReleaseDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AlbumImage)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AlbumImage)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AlbumComments)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AlbumComments)
        </dd>

    </dl>

    @foreach (Song song in Model.Songs)
    {
        <h3 class="detailsAlbumsName">@song.SongTitle</h3>
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
