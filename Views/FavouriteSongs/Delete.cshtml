@model MFCommunity.Models.FavouriteSong

@{
    ViewData["Title"] = "Delete";
}

<h2 class="removesongtitle">Remove favourite song</h2>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2 removesong">
            Track:
        </dt>
        <dd class="col-sm-10 removesong">
            @Model.Song.SongTitle (@Model.Song.Album.Artist.ArtistName)
        </dd>
    </dl>

    <form asp-action="Delete" class="removesongbuttons">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Remove from my list" class="btn btn-warning" />
        <a asp-action="Index"><input value="Back to favourites" class="btn btn-success" /></a>
    </form>
</div>