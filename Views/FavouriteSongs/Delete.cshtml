@model MFCommunity.Models.FavouriteSong

@{
    ViewData["Title"] = "Delete";
}

<h2 class="removesongtitle">Remove favourite song</h2>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2 removesong">
            Track:
        </dt>
        <dd class="col-sm-10 removesong">
            @Model.Song.SongTitle (@Model.Song.Album.Artist.ArtistName)
        </dd>
    </dl>

    <form asp-action="Delete" class="removesongbuttons">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Remove from my list" class="btn btn-warning" />
        <a asp-action="Index"><input value="Back to favourites" class="btn btn-success" /></a>
    </form>
</div>


<div id="waveform">
    <!-- Here be waveform -->
</div>
       

<div class="col-sm-2">
    <button class="btn btn-success btn-block" id="playPause">
        <span id="play">
            <i class="glyphicon glyphicon-play"></i>
            Play
        </span>

        <span id="pause" style="display: none">
            <i class="glyphicon glyphicon-pause"></i>
            Pause
        </span>
    </button>
</div>
  

<div class="list-group" id="playlist">
    <a href="~/media/sample/sample.mp3" class="list-group-item">
        <i class="glyphicon glyphicon-play"></i>
        czskamaarù – Trou
        <span class="badge">0:21</span>
    </a>

    <a href="~/media/sample/sample.mp3" class="list-group-item">
        <i class="glyphicon glyphicon-play"></i>
        日本人の話し
        <span class="badge">1:04</span>
    </a>

    <a href="~/media/sample/sample.mp3" class="list-group-item">
        <i class="glyphicon glyphicon-play"></i>
        Рассказы о сновидениях
        <span class="badge badge-info">1:26</span>
    </a>

</div>
